{{#each loadouts as |loadout|}}
  {{log loadout}}
  <section data-id="{{loadout.id}}" class="loadout-block col-3 md">
    <h5>{{loadout.loadout_name}}</h5>
    <h6>Armor</h6>
    <p>
      {{loadout.armor_slot}}
    </p>
    <h6>Weapon</h6>
    <p>
      {{loadout.weapon_slot}}
    </p>
    <h6>Trinket</h6>
    <p>
      {{loadout.trinket_slot}}
    </p>

    <button type="submit" class="btn btn-primary show-loadout">Load</button>
    <button type="submit" class="btn btn-danger delete-loadout">Delete</button>
  </section>

{{/each}}
